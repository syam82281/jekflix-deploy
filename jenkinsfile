opipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'master', url: 'https://github.com/syam82281/jekflix-template.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t myjekflix .'
            }
        }

        stage('Stop Old Container') {
            steps {
                sh 'docker stop myjekflix || true'
                sh 'docker rm myjekflix || true'
            }
        }

        stage('Run New Container') {
            steps {
                sh 'docker run -d -p 4000:4000 --name myjekflix myjekflix'
            }
        }
    }
}
